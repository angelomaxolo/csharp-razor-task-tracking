@page "/create-task"
@model Tasker.Pages.CreateTaskModel
@{
    ViewData["Title"] = "CreateTask";
}

<h1>New Task</h1>

<form asp-page="CreateTask" method="post">

    <label asp-for="NewTask.Title"></label>
    <input asp-for="NewTask.Title"/>

    <label asp-for="NewTask.Description"></label>
    <input asp-for="NewTask.Description"/>

    <label asp-for="NewTask.Priority"></label>
    <input asp-for="NewTask.Priority"/>

    <input type="submit"/>

</form>